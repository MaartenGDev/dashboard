{% import '/components/input.twig' as form %}
<!DOCTYPE html>
<html lang="en">
<head>
    {% block head %}
        <meta charset="UTF-8">
        <title>{{ title }}</title>
        <link rel="stylesheet" href="/css/app.css">
        <link rel="stylesheet" href="/css/foundation.min.css">
        <script src="/js/jquery-1.12.3.min.js"></script>
        <script src="https://code.highcharts.com/highcharts.js"></script>
        <script src="https://code.highcharts.com/modules/exporting.js"></script>
        <script src="/js/app.js"></script>
    {% endblock %}
</head>
<body>
{% block title %}
    <h1>{{ title }}</h1>
{% endblock %}
{% if errors %}
    <div class="flash-module flash-errors">
        {% for error in errors %}
            <p>{{ error }}</p>
        {% endfor %}
    </div>
{% endif %}
{% if messages %}
    <div class="flash-module flash-success">
        {% for message in messages %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>
{% endif %}
{% block navigation %}
    <div class="navigation">
        <ul>
            <li>Home</li>
            <li>Stats</li>
            <li>Information</li>
        </ul>
    </div>
{% endblock %}
<div class="app">
    {% block content %}
        <h1>Example Content</h1>
    {% endblock %}
</div>
{% block footer %}
{% endblock %}
</body>
</html>
