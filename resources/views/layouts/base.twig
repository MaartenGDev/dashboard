{% import '/components/input.twig' as form %}
<!DOCTYPE html>
<html lang="en">
<head>
    {% block head %}
        <meta charset="UTF-8">
        <title>{{ title }}</title>
        <link rel="stylesheet" href="/css/app.css">
        <script src="/js/app.js"></script>
    {% endblock %}
</head>
<body>
{% block title %}
    <h1>{{ title }}</h1>
{% endblock %}
{% if errors %}
    <div class="flash-module flash-errors">
        {% for error in errors %}
            <p>{{ error }}</p>
        {% endfor %}
    </div>
{% endif %}
{% if messages %}
    <div class="flash-module flash-success">
        {% for message in messages %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>
{% endif %}
{% block content %}
    <h1>Example Content</h1>
{% endblock %}

{% block footer %}
{% endblock %}
</body>
</html>
